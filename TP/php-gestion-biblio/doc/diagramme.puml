@startuml
'https://plantuml.com/class-diagram

abstract class Media{
    - string titre
    - int dureeEmprunt
    + abstract getInformations()
}

class Livre{
- string isbn
- string auteur
- int nbPage
+ getInformations()
}

class Magazine{
- int numero
- date datePublication
+ getInformations()
}

class BlueRay{
- string realisateur
- int annee
- int duree
+ getInformations()
}

class Adherent{
- string numAdherent
- string prenom
- string nom
- string email
- date dateAdhesion
+ __contruct()
+ genererNumero()
+ renouvelerAdhesion()
+ getInformations()
+ adhesionEstValable()
}

class Emprunt{
- date dateEmprunt
- date dateRetourEstimee
- date dateRetour
+ getInformations()
+ empruntEnCours()
+ empruntEnAlerte()
+ dureeMaxDepassee()
}

Media <|-- Livre
Media <|-- Magazine
Media <|-- BlueRay

Emprunt "0..* "--> "1..1 " Media
Adherent "1..1 "-->"0..* " Emprunt

@enduml